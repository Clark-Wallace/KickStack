{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": ["src/**/*", "../orchestrator/src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/__tests__/**/*"]
}