# KickStack Environment Configuration
# Copy this file to .env and update with your own values

# PostgreSQL Configuration
POSTGRES_USER=kick
POSTGRES_PASSWORD=changeme_strong_password_here
POSTGRES_DB=kickstack

# JWT Secret - MUST change for production
# Generate with: openssl rand -hex 32
JWT_SECRET=changeme_use_openssl_rand_hex_32_to_generate

# MinIO Object Storage - MUST change for production
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=changeme_strong_password_here
MINIO_DEFAULT_BUCKETS=uploads,avatars,exports

# GoTrue Authentication
GOTRUE_JWT_SECRET=${JWT_SECRET}
GOTRUE_DB_DRIVER=postgres
GOTRUE_DB_DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
GOTRUE_SITE_URL=http://localhost:3001
GOTRUE_API_HOST=0.0.0.0
GOTRUE_DISABLE_SIGNUP=false

# Email Configuration (MailHog for local dev)
GOTRUE_SMTP_HOST=mailhog
GOTRUE_SMTP_PORT=1025
GOTRUE_SMTP_USER=
GOTRUE_SMTP_PASS=
GOTRUE_SMTP_ADMIN_EMAIL=admin@kickstack.local
GOTRUE_MAILER_AUTOCONFIRM=true

# PostgREST Configuration
PGRST_PORT=3050
PGRST_DB_URI=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
PGRST_JWT_SECRET=${JWT_SECRET}
PGRST_DB_ANON_ROLE=anon
PGRST_DB_SCHEMAS=public

# AI Configuration (optional)
# For OpenAI
OPENAI_API_KEY=sk-...

# For Ollama (if not using OpenAI)
OLLAMA_HOST=http://host.docker.internal:11434

# Deployment Configuration
FLY_API_TOKEN=
FLY_APP_NAME=kickstack-app
FLY_REGION=iad

# Service URLs (for production)
PUBLIC_URL=https://your-app.fly.dev
API_URL=https://your-app.fly.dev/api
AUTH_URL=https://your-app.fly.dev/auth
STORAGE_URL=https://your-app.fly.dev/storage